<div class="main-container flex">
  <div class="users-wrapper flex">
      <div class="img-cont">
        <%= image_tag (@user.photo.nil? ? "user.png" : @user.photo), :size => "100x100", alt: "user photo" %>
      </div>
      <div class="user-details">
        <h2><%= @user.name %></h2>
        <p>Number of posts: <%= @user.posts_counter %></p>
      </div>
  </div>

  <div class="user-bio">
    <h3>Bio</h3>
    <p><%= @user.bio %></p>
  </div>

  <div class="user-posts">
    <% if @user.recent_post_counter.count.zero? %>
    <p><%= @user.name %> has no posts yet</p>
    <% else %>
    <% @user.recent_post_counter.each do |post| %>
    <%= link_to user_post_path(@user.id, post.id), {:class => "link-button"} do%>
      <div class="users-post">
        <h2><%= post.title %></h2>
        <p><%= post.text %></p>
        <h4>Comments: <%=post.comments_counter %>, Likes: <%= post.likes_counter %></h4>
      </div>
      <% end %>
      <% end %>
      <% end %>

      <button>
        <%= link_to "See all posts", user_posts_path(@user), class: "btn btn-primary bg-blue-500 text-white p-2 rounded text-center w-100" %>
      </button>
  <div>
 </div>